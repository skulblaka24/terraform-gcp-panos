<Toolbar/>
<div class="box is-fullwidth is-shadowless is-marginless">
  <h4 class="title is-5 is-marginless">
    Edit path filter config for <code>{{model.config.id}}</code>
  </h4>
</div>
<form {{action "saveConfig" model.config on="submit"}}>
  <PathFilterConfigList
    @paths={{model.paths}}
    @config={{model.config}}
  />
  <div class="field is-grouped is-grouped-split is-fullwidth box is-bottomless">
    <div class="field is-grouped">
      <div class="control">
        <button type="submit" class="button is-primary" data-test-config-save>
          Update
        </button>
      </div>
      <div class="control">
        {{#link-to
          "mode.secondaries.config-show"
          model.config.id
          class="button"
          }}
          Cancel
        {{/link-to}}
      </div>
    </div>
  </div>
</form>
