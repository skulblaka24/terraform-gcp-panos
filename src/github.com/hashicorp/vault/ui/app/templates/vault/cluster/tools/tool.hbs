<div class="columns">
  <MenuSidebar @title="Tools" @class="is-3">
    {{#each (tools-actions) as |supportedAction|}}
      {{#if (has-permission "tools" routeParams=supportedAction)}}
        <li>
          <LinkTo @route="vault.cluster.tools.tool" @model={{supportedAction}} @refreshModel={{true}} class="(if (eq supportedAction selectedAction) 'is-active')" data-test-tools-action-link={{supportedAction}}>
            {{capitalize supportedAction}}
          </LinkTo>
        </li>
      {{/if}}
    {{/each}}
  </MenuSidebar>
  <div class="column is-9">
    <ToolActionsForm @selectedAction={{selectedAction}} />
  </div>
</div>
