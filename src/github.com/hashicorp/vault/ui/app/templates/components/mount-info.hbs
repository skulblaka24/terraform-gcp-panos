<PageHeader as |p|>
  <p.top>
    <KeyValueHeader @baseKey={{model}} @path="vault.cluster.access.method" @root={{root}} @showCurrent={{true}} />
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      {{capitalize model.methodType}}
    </h1>
  </p.levelLeft>
  <p.levelRight>
    {{#if (eq section "configuration")}}
      <div class="field is-grouped">
        <div class="control">
          <LinkTo @route="vault.cluster.settings.auth.configure" @model={{model.id}} class="button is-ghost has-icon-right is-compact" data-test-configure-link={{true}}>
            Configure
            <Chevron />
          </LinkTo>
        </div>
      </div>
    {{/if}}
  </p.levelRight>
</PageHeader>
{{section-tabs model "authShow"}}
{{component (concat "auth-method/" section) model=model}}